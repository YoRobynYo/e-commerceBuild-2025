{
  "name": "maiway",
  "version": "1.0.0",
  "description": "A Maiway app",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run build:css:watch\" \"npm run start:dev\"",
    "start": "electron .",
    "start:dev": "electron . --dev",
    "build": "npm run build:css && npm run build:js && npm run build:electron",
    "build:css": "sass css/maiway.scss dist/css/maiway.css --style=compressed --source-map",
    "build:css:watch": "sass css/maiway.scss dist/css/maiway.css --source-map --watch",
    "build:js": "webpack --mode=production",
    "build:js:dev": "webpack --mode=development",
    "build:js:watch": "webpack --mode=development --watch",
    "build:electron": "electron-builder",
    "build:electron:dir": "electron-builder --dir",
    "dist": "npm run build && electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "test": "jest",
    "lint": "eslint js/ --ext .js",
    "lint:fix": "eslint js/ --ext .js --fix",
    "clean": "rimraf dist",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^25.0.5",
    "sass": "^1.93.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "css-loader": "^7.1.1",
    "style-loader": "^4.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "copy-webpack-plugin": "^12.0.2",
    "concurrently": "^9.0.1",
    "rimraf": "^6.0.1",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "@types/node": "^22.10.2"
  },
  "keywords": [
    "website",
    "store",
    "electron"
  ],
  "author": "RM",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.12.2"
  },
  "build": {
    "appId": "com.maiway.app",
    "productName": "Maiway",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
